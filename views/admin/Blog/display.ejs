<%- include('../../header.ejs') %>

<link rel="stylesheet" href="/css/blogdisplay.css">

<div class="container">
    <div class="row">
            <div class="col-md-4 ty"style="margin-top:100px;">
                <a href="/admin/dashboard" 
                <button type="button" class="btn  tw ii">Dashboard</button>
            </a>
            <a href="/admin/blogdisplay" 
                <button type="button" class="btn  tw">Display Blog</button>
              </a>
                <a href="/admin/Categoriesdisplay" 
                <button type="button" class="btn  tw">Categories</button>
            </a>
                <a href="/admin/contactdisplay" 
                <button type="button" class="btn  tw">Contact</button>
            </a>
                <a href="/admin/aboutdisplay" 
                <button type="button" class="btn  tw">About</button>
            </a>
            
                <a href="/logout" 
                <button type="button" class="btn  tw">Logout</button>
            </a>
            </div>
        <div class="col-md-8" style="margin-top:100px;">
            <button type="button" class="btn btn-primary pp" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Blog
              </button>
                <table>
                <tr>
                    <th colspan="5">Blogs</th>
                    </tr>
                    <tr> <!-- <tr>table row -->
                     <th>ID NO.</th>
                     <th>Title</th>
                     <th>Description</th>
                     <th>Image</th>
                     <th>Action</th>
                    </tr>
                    <% d.forEach((item)=>{%>
                      <tr>
                        <td><%= item._id %></td>
                        <td><%= item.title %></td>
                        <td><%= item.description.slice(0,100) %></td>
                        <td><img src="<%= item.image.url %>" width="100px;"></td>
                      <td>                   
                          <a href="/blogview/<%=item.id %>" class="btn btn-info"><i class="fa-solid fa-eye mr"></i></a>
                          <a href="/admin/blogedit/<%= item._id %>" class="btn btn-info"><i class="fa-solid fa-pen-to-square  mr"></i></a>

                          <a href="/admin/blogdelete/<%= item._id %>" class="btn btn-info"><i class="fa-solid fa-trash mr"></i>
                          </td>
                     </tr>
                    <% }) %>
                   
      
                  </table>
        </div>
    </div><!--row-end-->
</div><!--container-end-->


<!-- model blog creat -->
<!-- Button trigger modal -->  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/insertblog" method="post" enctype="multipart/form-data">
            <div class="md-3">
                <label for=>title</label>
                <input  type="text" name="title" class="form-contrl">
            </div>
            <br>
            <div class="md-3">
                <label for="">description</label>
                <textarea  type="text" name="description" class="form-contrl"></textarea>
            </div>
          <br>
            <div class="md-3">
              <label for=>Uplode image</label>
              <input  type="file" name="image" class="form-contrl">
          </div>
            <br>
            <button class="btn btn-info">submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include('../../footer.ejs') %>